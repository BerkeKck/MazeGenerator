@model UrunInsertVM

<div class="card">
    <div class="card-header">
        <h3 class="text-success">Yeni Urun Tanimlama Sayfasi</h3>
    </div>
    <div class="card-body">
        <form action="/" method="post">
            <div class="mt-3">
                <label asp-for="UrunAdi"></label>
                <input asp-for="UrunAdi" />
                <span asp-validation-for="UrunAdi"></span>
            </div>
            <div class="mt-3">
                <label asp-for="UrunKodu"></label>
                <input asp-for="UrunKodu" />
                <span asp-validation-for="UrunKodu"></span>
            </div>
            <div class="mt-3">
                <label asp-for="BirimId"></label>
                <input asp-for="BirimId" />
                <span asp-validation-for="BirimId"></span>
            </div>
            <div class="mt-3">
                <label asp-for="Adet"></label>
                <input asp-for="Adet" />
                <span asp-validation-for="Adet"></span>
            </div>
            <div class="mt-3">
                <label asp-for="Fiyat"></label>
                <input asp-for="Fiyat" />
                <span asp-validation-for="Fiyat"></span>
            </div>
            <div class="card-footer">
                <button class="btn btn-success" type="submit">Kaydet</button>
            </div>
        </form>
    </div>
</div>